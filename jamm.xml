<tool id="jamm1.06rev2" name="JAMM" version="1.0.6.2">
<description>Calls peaks on NGS data</description>
<requirements>
<!--
	<requirement type="package" version="2.5">b2g4pipe</requirement>
-->
</requirements>
<command interpreter="python">
jammwrapper.py -i
	#for $i in $replicate
	${i.input}
	#end for
	-g ${genomeSizeFile}
	-z $output
</command>

<stdio>
<!-- Wrapper ensures anything other than zero is an error -->
<exit_code range="1:" />
<exit_code range=":-1" />
</stdio>

<inputs>
	<repeat name="replicate" title="Replicate">
		<param name="input" type="data" format="bed">
		</param>
	</repeat>
	<param name="genomeSizeFile" type="data" label="File indicating chromosome sizes" description="">
	</param>
</inputs>

<outputs>
<data name="output" format="tabular" label="Narrowpeak tabular" />
</outputs>
